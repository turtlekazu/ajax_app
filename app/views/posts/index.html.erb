<h1>AjaxApp</h1>
<%= form_with url: '/posts', method: :post, id: 'form' do |f| %>
  <%= f.text_field :content %>
  <%= f.submit '投稿する', id: 'submit' %>
<% end %>

<% @posts.each do |post| %>
  <div class="post">
    <div class="post-date">
      投稿日時:<%= post.created_at %>
    </div>
    <div class="post-content">
      <%= post.content %>
    </div>
  </div>
<% end %>